<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true"
    android:isScrollContainer="true"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:gravity="center"
        android:weightSum="4"
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:background="@drawable/button_transparent_background"
            android:src="@drawable/reset_icon"
            android:layout_weight="1"
            android:id="@+id/reset_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:gravity="center"
            android:layout_weight="2"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/connection_status"
            android:text="">


            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dnsLabel"
                android:textStyle="bold"
                android:textColor="#424242" />

            <TextView
                android:id="@+id/dnsField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_weight="0"
                android:background="@drawable/text_view"
                android:drawableRight="@drawable/edit_pen"
                android:gravity="center_vertical"
                android:maxLength="64"
                android:padding="10dp"
                android:textColor="#424242" />

        </LinearLayout>

        <ImageButton
            android:background="@drawable/button_transparent_background"
            android:src="@drawable/settings_icon"
            android:layout_weight="1"
            android:id="@+id/settings_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_below="@id/layout_header"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <LinearLayout
            android:id="@+id/power_icon_layout"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/power_button_border_white"
            android:gravity="center">

            <ImageButton
                android:id="@+id/power_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/power_button_border_transparent"
                android:src="@drawable/power_icon_white" />

        </LinearLayout>

        <TextView
            android:id="@+id/power_status"
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:gravity="center"
            android:text="Off"
            android:textColor="#000000"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_above="@id/footer_layout"
        android:layout_below="@id/button_layout"
        android:background="#eceff1"
        android:id="@+id/live_log_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/footer_layout"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView

            android:id="@+id/live_log"
            android:textColor="#000000"
            android:layout_margin="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:scrollbars="vertical"
            android:scrollbarStyle="insideOverlay"
            android:fadeScrollbars="true"
            android:fadingEdge="vertical"/>

    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:background="#008BA3"
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/footer_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/link_field"
            android:text=""
            android:textColor="#455a64"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

</RelativeLayout>